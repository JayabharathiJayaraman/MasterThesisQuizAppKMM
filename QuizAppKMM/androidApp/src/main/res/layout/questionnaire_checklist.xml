<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/form_remark_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_button_sad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/questionnaire_wrongans2_states"
            android:button="@null"
            android:drawablePadding="20dp"
            android:elevation="5dp"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="text" />

        <RadioButton
            android:id="@+id/radio_button_indifferent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/questionnaire_wrongans1_states"
            android:button="@null"
            android:drawablePadding="20dp"
            android:elevation="5dp"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="text" />

        <RadioButton
            android:id="@+id/radio_button_happy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/questionnaire_correctans_states"
            android:button="@null"
            android:drawablePadding="20dp"
            android:elevation="5dp"
            android:padding="10dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="text" />
    </RadioGroup>

</RelativeLayout>